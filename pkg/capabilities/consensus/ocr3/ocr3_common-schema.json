{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/smartcontractkit/chainlink-common/pkg/capabilities/consensus/ocr3/common",
  "$defs": {
    "SignedReport": {
      "type": "object",
      "properties": {
        "Report": {
          "type": "string",
          "contentEncoding": "base64"
        },
        "Context": {
          "type": "string",
          "contentEncoding": "base64"
        },
        "Signatures": {
          "type": "array",
          "items": {
            "type": "string",
            "contentEncoding": "base64"
          }
        },
        "ID" : {
          "type": "string",
          "contentEncoding": "base64"
        }
      },
      "additionalProperties": false,
      "required": ["Report", "Context", "Signature", "ID"]
    },
    "encoder": {
      "type": "string",
      "enum": ["EVM"]
    },
    "encoder_config": {
      "type": "object",
      "additionalProperties": true
    },
    "report_id" : {
      "type": "string",
      "pattern": "^[a-f0-9]{4}$",
      "examples": [
        "0001"
      ]
    }
  }
}
